  
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.label "Select Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <h2>Notes</h2>

  <%= f.fields_for :notes do |note| %>
    <%= note.label :note %>
    <%= note.text_area :content, rows: 5, cols: 50 %>
  <% end %>

  <%= f.submit %>
<% end %>